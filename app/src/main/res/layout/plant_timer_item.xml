<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/timer_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/fillerImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                app:srcCompat="@drawable/filler" />

            <TextView
                android:id="@+id/plantName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/fillerImage"
                android:fontFamily="@font/almendra_display"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="-1"
                android:shadowRadius="4"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Plant Name" />

            <TextView
                android:id="@+id/plantTime_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fillerImage"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-64dp"
                android:layout_toEndOf="@id/fillerImage"
                android:drawablePadding="2dp"
                android:fontFamily="@font/almendra_display"
                android:shadowColor="@color/black"
                android:shadowDx="1"
                android:shadowDy="-1"
                android:shadowRadius="4"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Plant Time" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>